{% extends 'presentation/slide.html.twig' %}

{% block title -%}
    Getting crazy with HTTP2 and Webpack
{%- endblock %}

{% block content %}
    <pre id="{{ register_component('code') }}" class="js">
        {{- 'var components = [];

function registerComponent(name, component) {
    components[name] = component;
};

function getBaseComponent(name) {
    return components[name];
};

function startComponent(name, id, options) {
    var Component = web.getBaseComponent(name);
    var instance = new Component();
    instance.initialize($(\'#\' + id), options);
}'|e -}}
    </pre>
{% endblock %}
